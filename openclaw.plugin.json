{
  "id": "openclawwechat",
  "name": "OpenClawWeChat",
  "description": "OpenClawWeChat - WeChat MiniProgram channel plugin for OpenClaw",
  "version": "1.0.13",
  "type": "module",
  "main": "index.ts",
  "author": "OpenClaw Plugin Development",
  "license": "MIT",
  "configSchema": {
    "type": "object",
    "additionalProperties": false,
    "properties": {
      "apiKey": {
        "type": "string",
        "default": "YOUR_API_KEY_HERE",
        "description": "API Key（格式：bot_id:secret）"
      },
      "pollIntervalMs": {
        "type": "number",
        "default": 5000,
        "description": "轮询间隔（毫秒）"
      },
      "sessionKey": {
        "type": "string",
        "default": "agent:main:main",
        "description": "Session Key，用于标识会话"
      },
      "sessionKeyPrefix": {
        "type": "string",
        "description": "[已弃用，请用 sessionKey] 兼容旧配置，当 sessionKey 未配置时使用"
      },
      "debug": {
        "type": "boolean",
        "default": false,
        "description": "是否启用调试日志"
      }
    },
    "required": [
      "apiKey"
    ]
  },
  "openclaw": {
    "channel": {
      "id": "openclawwechat",
      "label": "OpenClawWeChat",
      "selectionLabel": "OpenClawWeChat",
      "blurb": "Bridge for OpenClaw to WeChat MiniProgram via HTTP polling",
      "docsPath": "/channels/openclawwechat",
      "docsLabel": "openclawwechat",
      "systemImage": "bubble.left.and.text.bubble.right",
      "aliases": [
        "wechat",
        "miniprogram",
        "wx"
      ]
    },
    "install": {
      "npmSpec": "openclawwechat",
      "localPath": "extensions/OpenClawWeChat",
      "defaultChoice": "local"
    }
  }
}
